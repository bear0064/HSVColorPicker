<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:id="@+id/colorSwatch"
        android:longClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hue"
        android:id="@+id/hueNotifier"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/colorSwatch"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/hue"
        android:background="@drawable/huegradient"
        android:layout_below="@+id/hueNotifier"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/hue2"
        android:background="@drawable/huegradient2"
        android:layout_alignTop="@+id/hue"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/hue" />


    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hueSB"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/hue"
        android:max="359"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saturation"
        android:id="@+id/saturationNotifier"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hueSB"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/saturation"
        android:layout_below="@+id/hue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/huesaturation"
        />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saturationSB"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/saturation"
        android:max="100"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Value / Lightness"
        android:id="@+id/valueNotifier"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/saturation"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/value"
        android:layout_below="@+id/saturation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/value_lightness" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valueSB"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/value"
        android:max="100"
        android:layout_alignParentEnd="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonGroup1"
            >


            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/blackButton"
                android:background="#000000"

                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/redButton"
                android:background="#FF0000"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/limeButton"
                android:background="#00FF00"
                />


            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/blueButton"
                android:background="#0000FF"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/yellowButton"
                android:background="#FFFF00"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/cyanButton"
                android:background="#00FFFF"
                />


            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/magentaButton"
                android:background="#FF00FF"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/silverButton"
                android:background="#C0C0C0"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/grayButton"
                android:background="#808080"
                />


            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/maroonButton"
                android:background="#800000"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/oliveButton"
                android:background="#808000"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/greenButton"
                android:background="#008000"
                />


            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/purpleButton"
                android:background="#800080"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/tealButton"
                android:background="#008080"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/navyButton"
                android:background="#000080"
                />




        </LinearLayout>




    </HorizontalScrollView>


</RelativeLayout>
